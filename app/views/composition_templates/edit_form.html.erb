<h1>
  Edit this ingredient for <%=Recipe.find(@composition.recipe_id).title%>
</h1>

<hr>

<form action="/update_composition/<%= @composition.id %>" method="post">

  <div class="form-group">
    <label for="quantity">
      Quantity
    </label>

    <input type="text" id="quantity" name="quantity" class="form-control" value="<%= @composition.quantity %>">
  </div>
    <input type="hidden" id="recipe_id" name="recipe_id" value="<%= @composition.recipe_id %>">
  <div class="form-group">
    <label for="unit_of_measure">Unit of Measure</label>
    <select id="unit_of_measure" name="unit_of_measure" class="form-control">
      <option>cups</option>
      <option>oz</option>
      <option>tbsp</option>
      <option>tsp</option>
      <option>can</option>
      <option>lbs</option>
      <option>pinch</option>
      <option>clove</option>
      <option>unit</option>
    </select>
  </div>
  <div class="form-group">
    <label for="ingredient_id">
      Ingredient
    </label>

    <input type="text" id="ingredient_id" name="ingredient_id" class="form-control" value="<%= @composition.ingredient_id %>">
  </div>
    <input type="hidden" id="user_id" name="user_id" value="<%= @composition.user_id %>">

  <button class="btn btn-block btn-outline-secondary">
    Update composition
  </button>
</form>

<hr>

<a href="/compositions">
  Go back
</a>
