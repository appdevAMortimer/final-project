<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All restaurants
    </h1>
    <a href="/restaurants/new" class="btn btn-block btn-outline-secondary">
      Add a new restaurant
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Location
        </th>
        <th>
          Menu link
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @restaurants.each do |restaurant| %>
      <tr>
        <td>
          <%= restaurant.id %>
        </td>

        <td>
          <%= restaurant.name %>
        </td>

        <td>
          <%= restaurant.location %>
        </td>
        <td>
          <%= restaurant.menu_link %>
        </td>

        <td>
          <%= time_ago_in_words(restaurant.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(restaurant.updated_at) %> ago
        </td>

        <td>
          <a href="/restaurants/<%= restaurant.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
